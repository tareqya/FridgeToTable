<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.CookingFragment">

    <TextView
        android:id="@+id/fCooking_TV_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick your available food"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginVertical="10dp"
        android:layout_centerHorizontal="true"

        />

    <Button
        android:id="@+id/fCooking_BTN_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fCooking_TV_title"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="Search Recipes"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fCooking_RV_ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fCooking_BTN_search"
        />

</RelativeLayout>